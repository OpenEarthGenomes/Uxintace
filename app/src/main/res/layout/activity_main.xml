<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000"
    android:paddingTop="40dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#222">
        <Button android:id="@+id/btnExit" android:layout_width="60dp" android:layout_height="60dp" android:text="❌" />
        <Button android:id="@+id/btnPause" android:layout_width="60dp" android:layout_height="60dp" android:text="⏸️" android:layout_toRightOf="@id/btnExit" android:layout_marginLeft="10dp"/>
        <TextView android:id="@+id/scoreText" android:layout_width="wrap_content" android:layout_height="wrap_content" 
            android:text="SCORE: 0" android:textColor="#00FF00" android:layout_alignParentRight="true" android:textSize="26sp" android:textStyle="bold" android:background="#44000000" android:padding="5dp"/>
    </RelativeLayout>

    <com.example.uxintace.GameView android:id="@+id/gameView" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" />
    
    </LinearLayout>
